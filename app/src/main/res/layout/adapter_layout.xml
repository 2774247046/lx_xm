            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改"
            android:background="#6893f4"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/delete_btn"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="删除"
            android:background="#541441"
            android:layout_gravity="center_horizontal"/>
